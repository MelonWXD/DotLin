<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/lay_4"
    android:paddingRight="@dimen/lay_4"
    android:paddingTop="@dimen/lay_4">

    <CheckBox
        android:id="@+id/cb_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/lay_8"
        android:layout_toRightOf="@+id/cb_done"
        android:paddingTop="@dimen/lay_4"
        android:textSize="@dimen/font_16" />

    <ImageView
        android:id="@+id/iv_level"
        android:layout_width="@dimen/lay_12"
        android:layout_height="@dimen/lay_12"
        android:src="@drawable/svg_tag"
        android:layout_alignParentEnd="true"/>


    <View
        style="@style/padding_divider"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_note" />
</RelativeLayout>
